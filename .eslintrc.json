{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["eslint-recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "arrowParens": "avoid",
        "endOfLine": "lf",
        "semi": true,
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "useTabs": false
      }
    ]
  }
}
